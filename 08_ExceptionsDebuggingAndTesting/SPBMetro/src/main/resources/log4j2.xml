<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
  <appenders>

    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>


    <File name="Search" fileName="logs/search.log">
      <PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </File>

    <File name="InputErr" fileName="logs/input_errors.log">
      <PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </File>

    <File name="Exceptions" fileName="logs/exceptions.log">
      <PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </File>
  </appenders>

  <loggers>
    <root level="all">
      <appender-ref ref="Console" level="info"/>
      <appender-ref ref="Search" level="info"/>
      <appender-ref ref="InputErr" level="warn"/>
      <appender-ref ref="Exceptions" level="error"/>
    </root>
  </loggers>
</configuration>